<!DOCTYPE html>
<html>
  <head>
    <title>Kooflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.logoUrl = "<%= image_url('logo.png') %>";
      window.splashUrl = "<%= image_url('splash.jpeg')%>";
      window.linkedinUrl = "<%= image_url('linkedin.png')%>";
      window.githubUrl = "<%= image_url('github.png')%>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
